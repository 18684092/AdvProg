def numberToWords(number):
  out = ""
  # 943,546,456,768
  # nine hundred and forty three Billion, five hundred and forty six Million, four hundred and fifty six Thousand, seven hundred and sixty eight
  # 1898
  # one thousand eight hundred and ninety eight
  if number == 0:
    return("Zero")
  if number > 999000000000:
    return("Number too large!")
  # Billion?
  billions = int(number / 1000000000)
  if billions > 0:
    # over 1 Billion
    out += speakWords(billions) + " Billion "
    billions *= 1000000000
    number -= billions
  millions = int(number / 1000000)
  if millions > 0:
    # over 1 Million
    out += speakWords(millions) + " Million "
    millions *= 1000000
    number -= millions
  thousands = int(number / 1000)
  if thousands > 0:
    # over 1 Thousand
    out += speakWords(thousands) + " Thousand "
    thousands *= 1000
    number -= thousands
  if number > 0:
    out += speakWords(number)
  
  return(out)

def speakWords(number):
  """ Convert numbers under 1000 """
  numbers = {1: 'One', 2: 'Two', 3: 'Three', 4: 'Four', 5: 'Five', 6: 'Six', 7: 'Seven', 8: 'Eight', 9: 'Nine', 10: 'Ten', 11: 'Eleven', 12: 'Twelve', 13: 'Thirteen', 14: 'Fourteen', 15: 'Fifteen', 16: 'Sixteen', 17: 'Seventeen', 18: 'Eighteen', 19: 'Nineteen'}
  tens = {2: 'Twenty', 3: 'Thirty', 4: 'Forty', 5: 'Fifty', 6: 'Sixty', 7: 'Seventy', 8: 'Eighty', 9: 'Ninety'}  
  out = ""
  
  (hundreds, units) = divmod(number, 100)
  if hundreds > 0:
    out += numbers[hundreds] + " Hundred "
    if units > 0:
      out += "and "
  
  if units > 19:
    (ten, units) = divmod(units, 10)
    out += tens[ten]
    if units > 0:
      out += "-" + numbers[units]
  elif units > 0:
    out += numbers[units]
  return(out)


for n in range(1001):
  print(n, numberToWords(n))
  
